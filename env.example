# Version of Elastic products
STACK_VERSION=9.0.0

# Set the cluster name
CLUSTER_NAME=postgresql-kafka-elasticsearch-cluster

# Set to 'basic' or 'trial' to automatically start the 30-day trial
LICENSE=basic
#LICENSE=trial

# Port to expose Elasticsearch HTTP API to the host
ES_PORT=6200
#ES_PORT=127.0.0.1:6200

# Port to expose Kibana to the host
KIBANA_PORT=6601
#KIBANA_PORT=80

# Increase or decrease based on the available host memory (in bytes)
MEM_LIMIT=8589934592

# Project namespace (defaults to the current folder name if not set)
COMPOSE_PROJECT_NAME=kafka-platform-cdc

# Elasticsearch Security Configuration
ELASTIC_PASSWORD=changeme123!
KIBANA_PASSWORD=changeme123!

# Set to 'true' to enable security, 'false' to disable (개발용으로 비활성화)
ELASTIC_SECURITY_ENABLED=false

# PostgreSQL Configuration
POSTGRES_DB=novel_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=6432

# Kafka Configuration
KAFKA_VERSION=7.5.0
KAFKA_PORT=6092
ZOOKEEPER_PORT=6181

# Kafka Connect Configuration
KAFKA_CONNECT_PORT=6083
ELASTICSEARCH_CONNECT_PORT=6084

# Kafka UI Configuration
KAFKA_UI_PORT=6080

# Debezium Configuration
DEBEZIUM_VERSION=2.4 